generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AdminUser {
  id           BigInt              @id @default(autoincrement())
  email        String              @unique
  username     String              @unique
  displayName  String?
  password     String
  isSuperAdmin Boolean             @default(false)
  canLogin     Boolean             @default(true)
  loginLogs    AdminUserLoginLog[]
  roles        AdminUserRoleRel[]
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  deletedAt    DateTime?
}

model AdminUserLoginLog {
  id          BigInt    @id @default(autoincrement())
  adminUserId BigInt
  adminUser   AdminUser @relation(fields: [adminUserId], references: [id], onDelete: NoAction)
  ip          String
  userAgent   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AdminUserRole {
  id          BigInt             @id @default(autoincrement())
  adminUsers  AdminUserRoleRel[]
  role        String
  slug        String             @unique
  summary     String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  deletedAt   DateTime?
}

model AdminUserRoleRel {
  userId        BigInt
  roleId        BigInt
  adminUser     AdminUser     @relation(fields: [userId], references: [id], onDelete: NoAction)
  adminUserRole AdminUserRole @relation(fields: [roleId], references: [id], onDelete: NoAction)
  assignedAt    DateTime      @default(now())
  assignedBy    String?

  @@id([userId, roleId])
}
